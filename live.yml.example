# Kronos Live Trading Configuration
# Place this file as live.yml in your strategy directory (e.g., strategies/momentum/live.yml)

# Strategy metadata
name: momentum
description: Momentum-based trading strategy
status: ready  # ready, running, stopped, error

# Exchange configurations
# You can configure multiple exchanges and choose which one to use when deploying
exchanges:
  # Paradex configuration
  - name: paradex
    enabled: true
    network: mainnet  # mainnet or testnet
    assets:
      - BTC-USD-PERP
      - ETH-USD-PERP
      - SOL-USD-PERP
    credentials:
      # These will be filled in interactively via the TUI
      # Or you can pre-fill them here (not recommended for security)
      account_address: ""
      eth_private_key: ""
      l2_private_key: ""  # optional

  # Bybit configuration (example)
  - name: bybit
    enabled: false
    assets:
      - BTCUSDT
      - ETHUSDT
    credentials:
      api_key: ""
      api_secret: ""

  # Binance configuration (example)
  - name: binance
    enabled: false
    assets:
      - BTCUSDT
      - ETHUSDT
      - SOLUSDT
    credentials:
      api_key: ""
      api_secret: ""

# Risk management parameters
risk:
  max_position_size: 10000.0   # Maximum position size in USD
  max_daily_loss: 1000.0        # Maximum daily loss in USD

# Execution settings
execution:
  dry_run: true   # Set to false for live trading
  mode: live      # live or backtest
